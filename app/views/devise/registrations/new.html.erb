<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if params[:plan]=="2" %>
          <h1 class="text-center">Pro Account</h1>
          <p>Sign up to the pro-account for $10 a month and get access to community and contact information</p>
        <% else %>
          <h1 class="text-center">Basic Account</h1>
          <p>Free forever! Limited Access to community. Upgrade to pro anytime.</p>
        <% end %>
      </div>
       <div class="well signup">
      <% if params[:plan]=='2' %>
          
          <%= render "pro_form" %>
          <% else %>
          <%= render "basic_form" %>
          <% end %>
            
            <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>